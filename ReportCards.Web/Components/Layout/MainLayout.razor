@inherits LayoutComponentBase
@inject NavigationManager Nav
@inject IHttpContextAccessor HttpContextAccessor

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">
            @{
                var user = HttpContextAccessor.HttpContext?.User;
                var name = user?.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;
                var isLoggedIn = user?.Identity?.IsAuthenticated ?? false;
            }
            @if (isLoggedIn)
            {
                <span class="me-3 text-muted small">👤 @name</span>
                <a href="/logout" class="btn btn-sm btn-outline-secondary">Sign Out</a>
            }
            else
            {
                <a href="/login" class="btn btn-sm btn-outline-primary">Sign In</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>