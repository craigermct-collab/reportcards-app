@page
@model ReportCards.Web.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In – KinderKollege Staff Portal</title>
    <link rel="stylesheet" href="~/bootstrap/bootstrap.min.css" />
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a5276 0%, #2e86c1 50%, #5dade2 100%);
            padding: 20px;
        }

        .login-wrapper {
            width: 100%;
            max-width: 440px;
        }

        .login-card {
            background: white;
            border-radius: 20px;
            padding: 48px 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.25);
            text-align: center;
        }

        /* Logo / Branding */
        .school-logo {
            margin-bottom: 8px;
        }

        .logo-icon {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, #1a5276, #2e86c1);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 16px;
            box-shadow: 0 4px 15px rgba(46, 134, 193, 0.4);
        }

        .logo-icon svg {
            width: 40px;
            height: 40px;
            fill: white;
        }

        .school-name {
            font-size: 28px;
            font-weight: 800;
            color: #1a5276;
            letter-spacing: -0.5px;
            line-height: 1.1;
        }

        .school-name span {
            color: #2e86c1;
        }

        .school-tagline {
            font-size: 13px;
            color: #7f8c8d;
            margin-top: 4px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }

        .divider {
            height: 1px;
            background: linear-gradient(to right, transparent, #d5e8f5, transparent);
            margin: 28px 0;
        }

        .portal-title {
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 6px;
        }

        .portal-subtitle {
            font-size: 14px;
            color: #95a5a6;
            margin-bottom: 28px;
        }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            width: 100%;
            padding: 14px 24px;
            background: white;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            color: #3c4043;
            text-decoration: none;
            transition: all 0.2s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .google-btn:hover {
            border-color: #2e86c1;
            background: #f0f7fd;
            box-shadow: 0 4px 16px rgba(46, 134, 193, 0.2);
            transform: translateY(-1px);
            color: #1a5276;
            text-decoration: none;
        }

        .google-btn:active {
            transform: translateY(0);
        }

        .footer-note {
            margin-top: 24px;
            font-size: 12px;
            color: #bdc3c7;
            line-height: 1.5;
        }

        /* Stars decoration */
        .stars {
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .star {
            position: absolute;
            background: rgba(255,255,255,0.15);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .star:nth-child(1) { width: 8px; height: 8px; top: 15%; left: 10%; animation-delay: 0s; }
        .star:nth-child(2) { width: 5px; height: 5px; top: 25%; left: 80%; animation-delay: 1s; }
        .star:nth-child(3) { width: 10px; height: 10px; top: 70%; left: 15%; animation-delay: 2s; }
        .star:nth-child(4) { width: 6px; height: 6px; top: 80%; left: 75%; animation-delay: 0.5s; }
        .star:nth-child(5) { width: 7px; height: 7px; top: 45%; left: 90%; animation-delay: 1.5s; }
        .star:nth-child(6) { width: 4px; height: 4px; top: 60%; left: 5%; animation-delay: 3s; }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); opacity: 0.15; }
            50% { transform: translateY(-12px); opacity: 0.3; }
        }

        .login-wrapper { position: relative; z-index: 1; }
    </style>
</head>
<body>
    <!-- Background decoration -->
    <div class="stars">
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
        <div class="star"></div>
    </div>

    <div class="login-wrapper">
        <div class="login-card">

            <!-- School Branding -->
            <div class="school-logo">
                <div class="logo-icon">
                    <!-- Book/learning icon -->
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 3L1 9l11 6 9-4.91V17h2V9L12 3zM5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82z"/>
                    </svg>
                </div>
                <div class="school-name">Kinder<span>Kollege</span></div>
                <div class="school-tagline">Private Primary School · Brampton, ON</div>
            </div>

            <div class="divider"></div>

            <div class="portal-title">Staff Portal</div>
            <div class="portal-subtitle">Sign in to access report cards and class management</div>

            <a href="/auth/google-login" class="google-btn">
                <!-- Google G logo -->
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
                    <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
                    <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
                    <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.18 1.48-4.97 2.31-8.16 2.31-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
                </svg>
                Sign in with Google
            </a>

            <p class="footer-note">
                Access is restricted to authorized KinderKollege staff.<br />
                Contact your administrator if you need access.
            </p>

        </div>
    </div>
</body>
</html>
